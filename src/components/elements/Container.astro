---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div">{
    variant?: "full" | "xl" | "lg" | "md" 
}

const { variant = "full", class: className, ...rest} = Astro.props;

const baseStyle = "w-full m-auto flex flex-col"

// different width sizes for each container variant
const variantStyle = {
    full: "",
    xl: "xl:max-w-8/10 lg:gap-32 gap-20",
    lg: "md:max-w-2/3 lg:gap-32 gap-20",
    md: "lg:max-w-1/2 lg:gap-32 gap-20",
}
---

<section class:list={[baseStyle, variantStyle[variant], className]} {...rest}>
    <slot />
</section>
